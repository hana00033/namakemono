<h1><%= @lesson.name %></h1>
<%= link_to image_tag("icon5.png",:class => "yazirushi"), lessons_path %>
<%= link_to image_tag("icon7.png",:id=>"trash"), lesson_path(@lesson.id), method: :delete %>
<table class="show-th">
  <tr>
    <th>授業名</th>
    <td><%= @lesson.name %></td>
  </tr>
  <tr>
    <th>授業詳細</th>
    <td><%= @lesson.description %></td>
  </tr>
  <tr>
    <th>教師名</th>
    <td><%= @lesson.teacher_name %></td>
  </tr>
  <tr>
    <th>単位数</th>
    <td><%= @lesson.credit %></td>
  </tr>
  <tr>
    <th>学年</th>
    <td><%= @lesson.grade %></td>
  </tr>
  <tr>
    <th>学期</th>
    <td><%= @lesson.term %></td>
  </tr>
  <tr>
    <th>曜日</th>
    <td><%= @lesson.week %></td>
  </tr>
  <tr>
    <th>何限</th>
    <td><%= @lesson.period %></td>
  </tr>
  <tr>
    <th>欠席数</th>
    <td ><%= @lesson.absence_count %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @lesson.user.email %></td>
  </tr>
</table>
<%= link_to "編集する", {controller: "lessons", action: "edit", :id => @lesson.id },{:class => "rink"} %>
