<h1>Lessons#new</h1>
<p>Find me in app/views/lessons/new.html.erb</p>
<div style="width: 300px;">
  <%= form_for(@lesson) do |f| %>
  	<div>
      <%= f.label :name, "授業名" %>
      <%= f.text_field :name, size: 50 %>
    </div>
    <div>
      <%= f.label :description, "詳細" %>
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.label :teacher_name, "教授名" %>
      <%= f.text_area :teacher_name %>
    </div>
    <div>
      <%= f.label :credit, "単位数" %>
      <%= f.text_area :credit %>
    </div>
    <div>
      <%= f.label :grade, "学年" %>
      <%= f.text_area :grade %>
    </div>
    <div>
      <%= f.label :term, "学期" %>
      <%= f.select :term, [["前期", "0"], ["後期", "1"]]%>
    </div>
    <div>
      <%= f.label :week, "曜日" %>
      <%= f.select :week, [["月", "0"], ["火", "1"],["水", "2"],["木", "3"],["金", "4"],["土", "5"],["日", "6"]],  :prompt => "選択してください" %>
    </div>
    <div>
      <%= f.label :period, "何限" %>
      <%= f.select :period, [["1限", "0"], ["2限", "1"],["3限","2"],["4限","3"],["5限","4"]]%>
    </div>
    <div>
      <%= f.label :absence_count, "欠席・遅刻回数" %>
      <%= f.text_area :absence_count %>
    </div>
    <%= f.submit 'Submit' %>
  <% end %>
</div>
<p><%= link_to '一覧に戻る', lessons_url %></p>
